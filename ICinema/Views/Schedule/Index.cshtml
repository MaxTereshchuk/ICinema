@using ICinema.ViewModels
@model IEnumerable<ScheduleViewModel>

@{
    ViewData["Title"] = "Schedule";
}

<style>
    .card-img-top {
        width: 100%;
        height: 225px;
        object-fit: cover;
    }

    .card-text {
        color: black;
    }

    .album py-5 bg-light {
    }
</style>

<div class="album py-5">
    <div class="container">

        <div class="row">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" alt="Thumbnail [100%x225]" src="@item.Film.Image">
                            <div class="card-body">
                                <p class="card-text">@item.Film.Title</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">@item.Schedule.Time</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No items found.</p>
            }
        </div>
    </div>
</div>
