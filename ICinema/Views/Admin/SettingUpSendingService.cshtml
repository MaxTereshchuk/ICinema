@using ICinema.ViewModels

@model EmailSettingsVM
@{
	ViewData["Title"] = "Setting Up Sending Service";
}
<h2>@ViewData["Title"]</h2>
<form method="post" asp-action="SettingUpSendingService" asp-controller="Admin">
	<div class="form-group">
		<label asp-for=@Model.SmtpUsername class="control-label"></label>
		<input asp-for=@Model.SmtpUsername class="form-control" placeholder="Enter SmtpUsername"></input>
		<span asp-validation-for=@Model.SmtpUsername class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for=@Model.SmtpPassword class="control-label"></label>
		<input asp-for=@Model.SmtpPassword class="form-control" placeholder="Enter SmtpPassword"></input>
		<span asp-validation-for=@Model.SmtpPassword class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for=@Model.SenderEmail class="control-label"></label>
		<input asp-for=@Model.SenderEmail class="form-control" placeholder="Enter SenderEmail"></input>
		<span asp-validation-for=@Model.SenderEmail class="text-danger"></span>
	</div>
	<div class="row">
		<div class="col-6">
			<button style="width:100%" class="btn btn-primary" type="submit">Create</button>
		</div>
		<div class="col-6">
			<a style="width:100%" class="btn btn-primary" asp-controller="Home" asp-action="Index">Cancel</a>
		</div>

	</div>

</form>
