@using ICinema.ViewModels
@model UserPersonalProfileVM
@{
    ViewData["Title"] = "Personal office";
}
<head>
    
    <style>
        
        .card {
            background-color: #000;
            border: 1px solid white;
            position: relative;
            color:white;
        }

        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Support</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="AppUser" asp-action="LogOut">Log Out</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <h1 class="text-center">Особистий Кабінет</h1>

        <div class="card mt-4">
            <div class="card-body">
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-8">
                        <h4 class="card-title">Ваша електронна адреса: @Model.Email</h4>
                    </div>                     
                </div>
                <div class="row  d-flex align-items-center justify-content-between">
                    <div class="col-8">
                        <h4 class="card-title ">Ваш номер телефону: @Model.PhoneNumber</h4>
                    </div>
                    <div class="col-4">       
                            <a asp-controller="AppUser" asp-action="EditPhoneNumber">(Edit)</a>
                    </div>
                </div>               
            </div>
        </div>
       
        <div class="card mt-4">
            <div class="card-body">
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-12">
                        <h4 class="card-title">Ваш Баланс: @Model.Balance грн</h4>
                    </div>
                    
                </div>
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-8">
                        <h4 class="card-title">Ваша картка</h4>
                    </div>
                    <div class="col-4">
                        
                            <a asp-controller="AppUser" asp-action="EditCardInfo">(Edit)</a>
                        
                    </div>
                </div>
                
            </div>
        </div>

