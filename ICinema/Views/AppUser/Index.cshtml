@using ICinema.ViewModels
@model UserPersonalProfileVM
@{
    ViewData["Title"] = "Personal office";
}
<head>
    
    <style>
        
        .card {
            background-color: #000;
            border: 1px solid white;
            position: relative;
            color:white;
        }

        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Support</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="AppUser" asp-action="LogOut">Log Out</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <h1 class="text-center">Особистий Кабінет</h1>

        <div class="card mt-4">
            <div class="card-body">
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-8">
                        <h4 class="card-title">Ваша електронна адреса: @Model.Email</h4>
                    </div>                     
                </div>
                <div class="row  d-flex align-items-center justify-content-between">
                    <div class="col-8">
                        <h4 class="card-title ">Ваш номер телефону: @Model.PhoneNumber</h4>
                    </div>
                    <div class="col-4">       
                            <a asp-controller="AppUser" asp-action="EditPhoneNumber">(Edit)</a>
                    </div>
                </div>               
            </div>
        </div>
       
        <div class="card mt-4">
            <div class="card-body">
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-12">
                        <h4 class="card-title">Ваш Баланс: @Model.Balance грн</h4>
                    </div>
                    
                </div>
                <div class="row d-flex align-items-center justify-content-between">
                    <div class="col-8">
                        <h4 class="card-title">Ваша картка:</h4>
                    </div>
                    <div class="col-4">
                        
                            <a asp-controller="AppUser" asp-action="EditCard">(Edit)</a>
                        
                    </div>
                </div>
                @if(Model.Card!=null){
                    <div class="row d-flex align-items-center justify-content-between">
                        <div class="col-8">
                            <h4 class="card-title">@Model.Card.CardNumber</h4>
                        </div>

                    </div>
                    <div class="row d-flex align-items-center justify-content-between">
                        <div class="col-5">
                            <h4 class="card-title">@Model.Card.CardHolderName</h4>
                        </div>
                        <div class="col-4">
                            <h4 class="card-title">@Model.Card.ExpiryDate</h4>
                        </div>
                        <div class="col-3">
                            <h4 class="card-title">@Model.Card.CVV</h4>
                        </div>

                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <h2>Ваші Білети</h2>
            <div id="carouselTicketsControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @if(Model.MyTickets!=null){
                        @foreach(var ticket in Model.MyTickets)
                        {
                        
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@ticket.ImageUrl" alt="Ticket image">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@ticket.</h5>
                                    <p>@ticket.Date.ToString("HH:mm")</p>
                                </div>
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselTicketsControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    
                </a>
                <a class="carousel-control-next" href="#carouselTicketsControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    
                </a>
            </div>
        </div> 
    </div>
</body>

