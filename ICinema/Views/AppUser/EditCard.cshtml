@using ICinema.ViewModels
@model EditCardVM
@{
	ViewData["Title"] = "Edit Card";
}
<body>
	<h2>@ViewData["Title"]</h2>
	<form method="post">
		<div class="row">
			<div class="col-12 ">
				<div class="form-group">
					<label asp-for="CardNumber" class="control-label"></label>
					<input asp-for="CardNumber" class="form-control" placeholder="Enter CardNumber"> </input>
					<span asp-validation-for="CardNumber" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-5 ">
				<div class="form-group">
					<label asp-for="CardHolderName" class="control-label"></label>
					<input asp-for="CardHolderName" class="form-control" placeholder="Enter Card Holder Name"> </input>
					<span asp-validation-for="CardHolderName" class="text-danger"></span>
				</div>
			</div>
			<div class="col-4 ">
				<div class="form-group">
					<label asp-for="ExpiryDate" class="control-label"></label>
					<input asp-for="ExpiryDate" class="form-control" placeholder="Enter Expiry Date"> </input>
					<span asp-validation-for="ExpiryDate" class="text-danger"></span>
				</div>
			</div>
			<div class="col-3 ">
				<div class="form-group">
					<label asp-for="CVV" class="control-label"></label>
					<input asp-for="CVV" class="form-control" placeholder="Enter CVV"> </input>
					<span asp-validation-for="CVV" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-6">
				<button style="width:100%" type="submit" class="btn btn-primary">Edit</button>
			</div>
			<div class="col-6">
				<a style="width:100%" class="btn btn-primary" asp-controller="AppUser" asp-action="Index">Cancel</a>
			</div>

		</div>



	</form>
	<div>
		<span>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</span>
	</div>
</body>