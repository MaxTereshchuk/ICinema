@using ICinema.ViewModels
@model LoginVM
@{
	ViewData["Title"] = "Login page";
}
<h2>Login</h2>
<form method="post" asp-controller="AppUser" asp-action="Login">
	
	<div class="form-group">
		<label asp-for="Email" class="control-label"></label>
		<input asp-for="Email" class="form-control" placeholder="Enter Email"> </input>
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Password" class="control-label"></label>
		<input asp-for="Password" class="form-control" placeholder="Enter Password"> </input>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="row">
		<div class="col-6">
			<button style="width:100%" type="submit" class="btn btn-primary">Login</button>
		</div>
		<div class="col-6">
			<a style="width:100%" class="btn btn-primary" asp-controller="AppUser" asp-action="Register">Sign Up</a>
		</div>
		
	</div>
	
	
	
</form>
<div>
	<span>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</span>
</div>

