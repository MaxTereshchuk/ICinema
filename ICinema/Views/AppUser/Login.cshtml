@using ICinema.ViewModels
@model LoginVM
@{
	ViewData["Title"] = "Login page";
}
<form method="post">
	
	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control"> </input>
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Password"></label>
		<input asp-for="Password" class="form-control"> </input>
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary" asp-controller="AppUser" asp-action="Login">Login</button>
	<div>
		<span asp-validation-summary="All" class="text-danger"></span>
	</div>
</form>
